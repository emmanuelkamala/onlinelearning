<p id="notice"><%= notice %></p>

<table class="table-auto mt-10 container mx-auto">
  <thead>
    <tr>
      <th class="text-3xl pb-5">Title</th>
      <th class="text-3xl pb-5">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td class="text-2xl"><%= course.title %></td>
        <td class="text-2xl"><%= course.description %></td>
        <td class="text-2xl bg-green-300 text-center p-4"><%= link_to 'Show', course %></td>
        <td class="text-2xl btn"><%= link_to 'Edit', edit_course_path(course) %></td>
        <td class="text-2xl btn"><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, class: "container mx-auto" %>
